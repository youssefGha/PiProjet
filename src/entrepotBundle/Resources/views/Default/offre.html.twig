{% extends 'base.html.twig' %}
{% block content %}
    <div  class="home">
        <div class="home_slider_container">

            <div class="owl-carousel owl-theme home_slider">

                <div class="owl-item home_slider_item">
                    <div class="home_slider_background" style="background-image:url({{ asset('front/images/fournisseurs.jpg') }})"></div>
                    <div class="home_slider_content_container">
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <div class="home_slider_content"  data-animation-in="fadeIn" data-animation-out="animate-out fadeOut">
                                        <div class="home_slider_title">Vous êtes fournisseur ? Faites-nous confiance.</div>
                                        <div class="button button_light home_button"><a href="{{  path('fos_user_registration_register_fournisseur') }}">Rejoignez-nous!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="owl-item home_slider_item">
                    <div class="home_slider_background" style="background-image:url({{ asset('front/images/livreurs.jpg') }})"></div>
                    <div class="home_slider_content_container">
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <div class="home_slider_content"  data-animation-in="fadeIn" data-animation-out="animate-out fadeOut">
                                        <div class="home_slider_title">Vous êtes livreur ? Faites-nous confiance.</div>
                                        <div class="button button_light home_button"><a href="{{  path('fos_user_registration_register_livreur') }}">Rejoignez-nous!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

            <!-- Home Slider Dots -->

            <div  class="home_slider_dots_container">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="home_slider_dots">
                                <ul id="home_slider_custom_dots" class="home_slider_custom_dots">
                                    <li class="home_slider_custom_dot active">01.</li>
                                    <li class="home_slider_custom_dot">02.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Ads -->

    <div style="margin-bottom: 50px" class="avds">
        <div class="avds_container d-flex flex-lg-row flex-column align-items-start justify-content-between">
            <div class="avds_small">
                <div class="avds_background" style="background-image:url({{ asset('front/images/fournisseur.jpg') }})"></div>
                <div class="avds_small_inner">
                    <div class="avds_discount_container">
                        <img src="images/discount.png" alt="">
                    </div>
                    <div class="avds_small_content">
                        <div class="avds_title" style="margin-left:50px">Plus de 100 fournisseurs</div>
                        <div class="avds_link" style="margin-left:50px"><a href="{{  path('fos_user_registration_register_fournisseur') }}">Collaborent avec nous!</a></div>
                    </div>
                </div>
            </div>
            <div class="avds_large">
                <div class="avds_large_content" >
                    <div class="avds_background" style="background-image:url({{ asset('front/images/livreur.jpg') }});width: 100%;height: 100%"></div>

                    <div class="avds_title" style="margin-left:350px">Devenez Livreur!</div>
                    <div class="avds_link" style="margin-left:350px"><a href="{{  path('fos_user_registration_register_livreur') }}">Rejoignez-nous!</a></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
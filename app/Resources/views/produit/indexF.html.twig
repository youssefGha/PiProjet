{% extends 'base.html.twig' %}
{% block content %}
    <section id="main-content">

        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> PRODUCTS </h3>


                        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                            <br><br><br><br><br><br><br>
                            <thead>


                            <th>LIBELLE</th>
                            <th class="hidden-phone">PRIX</th>
                            <th class="hidden-phone">DISPONIBILITE</th>
                            <th class="hidden-phone">DESCRIPTION</th>
                            <th class="hidden-phone">IMAGE</th>
                            <th class="hidden-phone">CATEGORIE</th>
                            <th class="hidden-phone">LIKE / DISLIKE</th>
                            <th class="hidden-phone">SHARE</th>
                            </thead>
                        </center>
                            <center>
                            <tbody>
                            {% for produit in produits %}
                                <tr>


                                    <td>{{ produit.lib }}</td>

                                    <td>{{ produit.prixVente }}</td>

                                    <td>{{ produit.disponibilite }}</td>

                                    <td>{{ produit.description }}</td>

                                    <td><img src="{{ asset('images/uploads/') }}{{ produit.nomImage }}" style="width: 150px; height: 150px"></td>

                                    <td>{{ produit.categorie.lib }}</td>


                                    <td>




                                        <style>
                                            #myProgress {
                                                width: 50%;
                                                height: 10px;
                                                background-color: #ddd;
                                            }

                                            #myBar {
                                                width: 50%;
                                                height: 10px;
                                                background-color: #4cafa3;
                                            }
                                        </style>


                                        <div id="all">
                                            <div id="myProgress">
                                                <div id="myBar"></div>
                                            </div>

                                            <br>
                                        <div id="like">
                                                <ul>
                                            <li>


                                                <button class="btn btn-round btn-info" onclick="like();"><i class="fa fa-thumbs-up"></i> </button>
                                            </li>
                                                </ul>
                                        </div>

                                        <div id="dislike">
                                        <ul>
                                            <li>

                                                <button class="btn btn-round btn-danger" onclick="dislike();"><i class="fa fa-thumbs-o-down"></i> </button>
                                            </li>
                                        </ul>
                                        </div>
                                        </div>

                                            <script type="text/javascript">
                                                var likes=0 , dislikes=0;
                                                function like() {
                                                    likes++;
                                                    calculateBar();
                                                    
                                                }
                                                function dislike() {
                                                    dislikes++;
                                                    calculateBar();

                                                }
                                                function calculateBar() {
                                                    var total= likes+dislikes;
                                                    var pecentageLikes=(likes/total)*100;
                                                    var pecentageDislikes=(dislikes/total)*100;

                                                    document.getElementById('likes').style.width=pecentageLikes.toString()+"%";
                                                    document.getElementById('dislikes').style.width=pecentageDislikes.toString()+"%";

                                                }
                                                calculateBar();

                                            </script>
                                        </div>




                                    </td>
                                    <td>
                                        <div id="dislike">
                                            <ul>
                                                <li>

                                                    {{ twitterButton() }}

                                                    {{ pinterestButton() }}

                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                        </table>


        </section>
    </section>





{% endblock %}

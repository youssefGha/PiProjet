{% extends 'baseback.html.twig' %}

{% block content %}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> CATEGORIES </h3>
        <div class="row mb" style="padding: 2rem">
            <div class="col-md-12">
                <div class="col-md-3" style="padding:0; margin: 1rem; background-color: white; border-radius: 15px; box-shadow: 0 0.46875rem 2.1875rem rgba(4,9,20,0.03), 0 0.9375rem 1.40625rem rgba(4,9,20,0.03), 0 0.25rem 0.53125rem rgba(4,9,20,0.05), 0 0.125rem 0.1875rem rgba(4,9,20,0.03);">
                    <img class="card-img-top" src="{{ asset('uploads/images/') }}{{ categorie.nomImage }}" alt="Card image cap" style="width: 100%; height: 300px; border-top-right-radius: 15px; border-top-left-radius: 15px">
                    <div class="card-body" style="padding: 2rem">
                        <h5 class="card-title">{{ categorie.lib }}</h5>
                        <p class="card-text">{{ categorie.description }}.</p>
                        <div>
                            <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}"><div class="btn btn-primary">Modifier</div></a>
                            <a href="{{ path('categorie_index') }}"><div class="btn btn-danger">Back to the list</div></a>

                        </div>

                    </div>
                </div>


                <!-- page start-->

            </div>
        </div>
    </section>
</section>

{% endblock %}
